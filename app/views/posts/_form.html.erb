<%= error_messages_for(@post) %>

<table class="table table">
	<tr>
		<th>Title</td>
		<td><%= text_field(:post, :title, :size => 40, :style => "font-size: 1.5em;") %></td>

	
		<td rowspan="2">
			<div class="categorylist">
				<h2>Categories:</h2>
				<ul>
					<% @all_categories.each do |cat| %>
						<li><%= check_box_tag('categories[]', cat.id, @post.categories.map {|c| c.id }.include?(cat.id)) %>
							<%= cat.name %></li>
					<% end %>
				</ul>
			</div>
		</td>
	</tr
	<tr>
		<th>Post Body</th>
		<td><%= text_area(:post, :content, :cols => 70, :rows => 20, :style => "font-size: 1.1em;") %></td>
	</tr>
	<tr>
		
		<td><% @post.author_id = @get_one_user %></td>
		
	</tr>
	<tr>
	
		<td><% @post.status = 'draft' %></td>
	</tr>	
		
	
</table>
